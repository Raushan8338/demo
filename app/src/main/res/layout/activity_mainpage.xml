<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/kids1"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/replace"
        tools:context="com.ample.ample.nps.Mainpage">
        <FrameLayout
            android:id="@+id/fragment_place"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="115dp"
        android:id="@+id/frame"
        android:gravity="center"
        android:src="@drawable/ic_account_circle_black_24dp"
        android:layout_marginTop="18dp"
        android:layout_centerHorizontal="true"
        />

        <GridLayout
            android:id="@+id/grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/transparent"

            android:layout_marginTop="120dp"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:orientation="horizontal"
                >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textStyle="normal"
                android:textSize="20sp"
                android:hint="UserName"
                android:textColor="#fff"
                android:textColorHint="#fff"
                android:id="@+id/user_name"
                />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Little Steps Play School"
                android:textColor="@color/s"
                android:textSize="18sp"
                android:textStyle="normal"
                android:gravity="center"
                />

            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:padding="10dp">

            <LinearLayout
                android:id="@+id/home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/home1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="3dp"
                    android:background="@drawable/img_background"
                    android:src="@drawable/ic_home_black_24dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Home"
                    android:textColor="@color/s"
                    android:textSize="20sp"
                    android:textStyle="normal"
                    android:layout_gravity="center"
                   />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/announcement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:background="@drawable/img_background"
                    android:src="@drawable/ic_announce_black_24dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Announcement"
                    android:textColor="@color/s"
                    android:textSize="20sp"
                    android:textStyle="normal"
                    android:layout_gravity="center"
                   />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="3dp"
                    android:background="@drawable/img_background"
                    android:src="@drawable/ic_activity_black_24dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Activity"
                    android:textColor="@color/s"
                    android:textSize="20sp"
                    android:textStyle="normal"
                    android:layout_gravity="center"
                    />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:padding="10dp">
            <LinearLayout
                android:id="@+id/message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/message2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="3dp"
                    android:background="@drawable/img_background"
                    android:src="@drawable/ic_message_black_24dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Message"
                    android:textSize="20sp"
                    android:textStyle="normal"
                    android:layout_gravity="center"
                    android:textColor="@color/s"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/assignmnets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="3dp"
                    android:background="@drawable/img_background"
                    android:src="@drawable/ic_assignment_black_24dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Assignments"
                    android:textSize="20sp"
                    android:textStyle="normal"
                    android:layout_gravity="center"
                    android:textColor="@color/s"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/daily_diary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="3dp"
                    android:background="@drawable/img_background"
                    android:src="@drawable/ic_diary_black_24dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Diary"
                    android:textSize="20sp"
                    android:textStyle="normal"
                    android:layout_gravity="center"
                    android:textColor="@color/s"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:padding="10dp">
            <LinearLayout
                android:id="@+id/payfee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="3dp"
                    android:background="@drawable/img_background"
                    android:src="@drawable/ic_pay_black_24dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pay Fee"
                    android:textColor="@color/s"
                    android:textSize="20sp"
                    android:textStyle="normal"
                    android:layout_gravity="center"
                     />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/attendance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="3dp"
                    android:background="@drawable/img_background"
                    android:src="@drawable/ic_assignment_turned_in_black_24dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Attendance"
                    android:textSize="20sp"
                    android:textStyle="normal"
                    android:layout_gravity="center"
                    android:textColor="@color/s"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="3dp"
                    android:background="@drawable/img_background"
                    android:src="@drawable/ic_logout_black_24dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Logout"
                    android:textSize="20sp"
                    android:textStyle="normal"
                    android:layout_gravity="center"
                    android:textColor="@color/s"/>
            </LinearLayout>
        </LinearLayout>

    </GridLayout>
    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>